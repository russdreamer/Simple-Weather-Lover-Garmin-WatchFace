<settings>

     <setting propertyKey="@Properties.AccentColor" title="@Strings.AccentColorTitle">
        <settingConfig type="list">
            <listEntry value="0xFF0000">@Strings.ColorRed</listEntry>
            <listEntry value="0xff0099">@Strings.ColorPink</listEntry>
            <listEntry value="0xAA00FF">@Strings.ColorPurple</listEntry>
            <listEntry value="0x00AAFF">@Strings.ColorBlue</listEntry>
            <listEntry value="0x00ffff">@Strings.ColorAqua</listEntry>
            <listEntry value="0x00AA00">@Strings.ColorGreen</listEntry>
            <listEntry value="0x55FF00">@Strings.ColorLime</listEntry>
            <listEntry value="0xffff00">@Strings.ColorYellow</listEntry>
            <listEntry value="0xFFAA00">@Strings.ColorOrange</listEntry>
            <listEntry value="0xffffff">@Strings.ColorWhite</listEntry>
            <listEntry value="0xAAAAAA">@Strings.ColorGrey</listEntry>
        </settingConfig>
    </setting>
    <setting propertyKey="@Properties.LowPowerMode" title="@Strings.LowPowerModeTitle">
        <settingConfig type="list">
            <listEntry value="0">@Strings.Weather</listEntry>
            <listEntry value="1">@Strings.Steps</listEntry>
        </settingConfig>
    </setting>

    <setting propertyKey="@Properties.DataOnWristTurn" title="@Strings.DataOnWristTurnTitle">
        <settingConfig type="list">
            <listEntry value="0">@Strings.ShowDefaultField</listEntry>
            <listEntry value="1">@Strings.ShowCurrentWeather</listEntry>
            <listEntry value="2">@Strings.ShowHourlyWeather</listEntry>
        </settingConfig>
    </setting>

    <setting propertyKey="@Properties.UseMilitaryFormat" title="@Strings.MilitaryFormatTitle">
        <settingConfig type="boolean" />
    </setting>

</settings>
